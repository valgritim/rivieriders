{% extends 'base.html.twig' %}
{% block body %} 
    {% include('./partials/header.html.twig') %}
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <img style="height: 300px; width: 85%; display: block;" src="../images/{{ moto.coverImg }}" alt="Card image">
                </div>
                <div class="col-md-6">
                    <h1 class="h2">{{ moto.model }} &reg;</h1>
                    <span class="card-subtitle text-muted py-1">A PARTIR DE</span>
                    <span class="card-subtitle price">&nbsp; {{ moto.price }} &euro; <sup>TTC</sup>/jour </span>
                    <p class="mt-3">{{ moto.description | nl2br }}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-5">  
        <h2 class="h4">Les caractéristiques de {{ moto.model }} &reg;</h2>
        <div class="row">
             <ul>
                <li class="desc">Moteur    : {{ moto.moteur }} &reg;</li>
                <li class="desc">Réservoir : {{ moto.tank}} L</li>
                <li class="desc">Hauteur de selle: {{ moto.saddleheight }} mm</li>
                <li class="desc">Poids : {{ moto.weight }} Kg</li>
                <li class="desc">Sacoches: {% if moto.saddlebags %}Oui 
                            {% else %} Non
                            {% endif %} 
                </li>
            </ul> 
        </div> 
        <a href="#" class="btn btn-primary">Nous contacter</a>                                 
    </div> 
                  
           


    
{% endblock %}