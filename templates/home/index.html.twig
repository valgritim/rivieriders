{% extends 'base.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block body %}
    {% include('./partials/header.html.twig') %}
    
    <div class="container">
        <div class="jumbotron mt-5">
            <h1 class="display-5">Hi Bikers!</h1>
            <p class="lead">Vivez une expérience inoubliable en parcourant la French Riviera sur une moto mythique...Enfourchez une légende !</p>
            <hr class="my-4">
            <p class="text-center"><img id="logo_small" src="{{asset("images/logo.png")}}" alt="Logo Harley Davidson" class="img-fluid"></p>
            <p class="lead text-center">
                <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
            </p>
        </div>
        <h1 class="my-5 text-center">Nos motos</h1>       
                 
            <div class="row">
                
                {% for result in results %} 
                <div class="col">  
                    <div class="card mb-5 ml-3">
                        <h3 class="card-header">Harley Davidson Ref.{{ result.id}}</h3>
                        <div class="card-body">
                            <h5 class="card-title">Modèle: {{ result.model }}</h5>
                            <h6 class="card-subtitle text-muted">Prix: {{ result.price }} &euro;/jour</h6>
                        </div>
                        <img style="height: 200px; width: 100%; display: block;" src="images/{{ result.coverImg }}" alt="Card image">
                        <div class="card-body">
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        </div>
                        <div class="card-body">
                            <a href="{{path("show", {"id": result.id })}}" class="card-link btn btn-primary">Voir la moto</a>
                           
                        </div>
                       
                    </div>  
                </div> 
                {% endfor %}           
                
            </div>
            
    </div>

{% endblock %}
