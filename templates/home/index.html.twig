{% extends 'base.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block body %}
    {% include('./partials/header.html.twig') %}
    
    <div class="container">
        <div class="jumbotron mt-5">
            <h1 class="display-5">Hi Bikers!</h1>
            <p class="lead">Vivez une expérience inoubliable en parcourant la French Riviera sur une moto mythique...Enfourchez une légende !</p>
            <hr class="my-4">
            <p class="text-center"><img id="logo_small" src="{{asset("images/logo.png")}}" alt="Logo Harley Davidson" class="img-fluid"></p>
            <p class="lead text-center">
                <a class="btn btn-primary btn-lg" href="#" role="button" id="Jumbo">A propos de nous</a>
            </p>
        </div>
        <h1 class="my-5 text-center">Nos motos</h1>       
                 
            <div class="row">
                
                {% for result in results %} 
                <div class="col mb-5 d-flex">  
                    <div class="card ml-3 card-moto">
                        <h3 class="card-header orange h4">{{ result.model | upper }} &reg;</h3>
                        <div class="card-body">
                            <span class="card-subtitle text-muted py-1">A PARTIR DE</span>                            
                            <span class="card-subtitle price">&nbsp; {{ result.price }} &euro; <sup>TTC</sup>/jour </span>  
                        </div>
                        <img style="height: 200px; width: 100%; display: block;" src="images/{{ result.coverImg }}" alt="Card image">
                        <div class="card-body">
                            <p class="card-text">{{ result.description }}.</p>
                        </div>
                        <div class="card-body">
                            <a href="{{path("show_moto", {"id": result.id, "slug": result.slug })}}" class="card-link btn btn-primary">Voir la moto</a>
                           
                        </div>
                       
                    </div>  
                </div> 
                {% endfor %}           
                
            </div>
            
    </div>

{% endblock %}
